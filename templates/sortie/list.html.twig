{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
<h1>Liste des Sorties</h1>


    <table>
        {% for sortie in sorties %}
            <tr>
                <td><a href="{{ path('sortie_detail', {'id': sortie.id}) }}">{{ sortie.nom }}</a></td>
                <td>Le {{ sortie.dateHeureDebut | date('d-m-Y') }} à {{ sortie.dateHeureDebut | date('h:i') }}</td>
                <td>Inscription jusqu'au {{ sortie.dateLimiteInscription | date('d-m-y') }} à {{ sortie.dateLimiteInscription | date('h:i') }}</td>
                <td>Statut : {{ sortie.etat.libelle }}</td>
                <td>
                    <a href="{{ path('sortie_detail', {'id': sortie.id}) }}">Détails</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
